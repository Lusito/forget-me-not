{
  "name": "forget-me-not-web-extension-builder",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "license": "Zlib",
  "author": "Santo Pfingsten",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode=development",
    "build-release": "webpack --mode=production",
    "lint": "npm run lint:es && npm run lint:scss && npm run lint:package && npm run lint:style",
    "lint:es": "eslint src/**/*.{ts,tsx} --ext .ts,.tsx --ignore-path .prettierignore",
    "lint:es:fix": "npm run lint:es -- --fix",
    "lint:fix": "npm run lint:es:fix && npm run lint:scss:fix && npm run lint:package:fix && npm run lint:style:fix",
    "lint:package": "sort-package-json --check",
    "lint:package:fix": "sort-package-json",
    "lint:scss": "stylelint --ignore-path .prettierignore src/**/*.scss",
    "lint:scss:fix": "stylelint --ignore-path .prettierignore --fix src/**/*.scss",
    "lint:style": "npm run lint:style:base -- --check",
    "lint:style:base": "prettier src/**/*.{ts,tsx,js,json,scss} ./*.{ts,tsx,js,json,scss} --quote-props consistent",
    "lint:style:fix": "npm run lint:style:base -- --write",
    "pack": "web-ext build -i src test coverage *.json \"*.js\" \"dist/*.map\" -i !manifest.json",
    "release": "npm run build-release && npm run pack",
    "start": "web-ext run",
    "test": "jest"
  },
  "dependencies": {
    "@lusito/eslint-config": "^1.0.4",
    "@lusito/eslint-config-react": "^1.0.4",
    "@lusito/prettier-config": "^1.0.0",
    "@lusito/stylelint-config": "^1.0.0",
    "@types/jest": "^25.2.1",
    "@types/markdown-it": "10.0.0",
    "@types/tldjs": "^2.3.0",
    "awesome-typescript-loader": "^5.2.1",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.2",
    "jest": "^25.3.0",
    "markdown-it": "^10.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "punycode": "^2.1.1",
    "sass-loader": "^8.0.2",
    "sort-package-json": "^1.41.0",
    "source-map-loader": "^0.2.4",
    "source-map-support": "^0.5.16",
    "tldjs": "^2.3.1",
    "ts-jest": "^25.3.1",
    "ts-keycode-enum": "^1.0.6",
    "tsx-dom": "^0.8.3",
    "typescript": "^3.8.3",
    "web-ext": "^4.1.0",
    "webextension-polyfill-ts": "^0.14.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "wet-layer": "^1.0.1"
  }
}
