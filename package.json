{
  "name": "forget-me-not-web-extension-builder",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "nyc mocha --require source-map-support/register --require ts-node/register test/**/*.ts",
    "release": "run-s build-release scss-release pack",
    "all": "run-s build scss",
    "build": "webpack --mode=development",
    "build-release": "webpack --mode=production",
    "scss-release": "node-sass --source-map true --output-style compressed src/styles/ -o dist",
    "scss": "node-sass --source-map true src/styles/ -o dist",
    "pack": "web-ext build -i src test coverage *.json \"*.js\" \"dist/*.map\" -i !manifest.json",
    "lint": "tslint -p ."
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "coverage/**/*",
      "docs/**/*",
      "test/**/*",
      "dist/**/*",
      "src/index.ts",
      "**/*.d.ts",
      "./*.js"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true,
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ]
  },
  "author": "Santo Pfingsten",
  "license": "Zlib",
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/markdown-it": "0.0.4",
    "@types/mocha": "^2.2.43",
    "@types/tldjs": "^1.7.1",
    "awesome-typescript-loader": "^3.2.3",
    "chai": "^4.1.2",
    "markdown-it": "^8.4.0",
    "mocha": "^4.0.1",
    "node-sass": "^4.6.0",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.7.1",
    "punycode": "^2.1.0",
    "source-map-loader": "^0.2.2",
    "source-map-support": "^0.5.0",
    "tldjs": "^2.3.1",
    "ts-keycode-enum": "^1.0.4",
    "ts-node": "^4.0.2",
    "tslint": "^5.9.1",
    "typescript": "^2.5.3",
    "webextension-polyfill-ts": "^0.8.8",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "wet-layer": "^1.0.1"
  },
  "dependencies": {}
}
